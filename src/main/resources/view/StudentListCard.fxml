<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="180.0" prefWidth="230.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <ImageView fx:id="image" fitHeight="88.0" fitWidth="113.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/default_image.png" />
            </image></ImageView>
      </children>
   </VBox>
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="186.0" prefWidth="71.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" prefHeight="17.0" prefWidth="46.0" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="temperature" styleClass="cell_small_label" text="\$temperature" />
      <Label fx:id="notes" styleClass="cell_small_label" text="\$notes" />

    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
   <GridPane layoutX="100.0" layoutY="10.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
      <children>
         <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="197.0" prefWidth="71.0" GridPane.columnIndex="0">
            <padding>
               <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <children>
               <HBox alignment="CENTER_LEFT" prefHeight="17.0" prefWidth="46.0" spacing="5">
                  <children>
                     <Label fx:id="id1" styleClass="cell_big_label">
                        <minWidth>
                           <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                     </Label>
                  </children>
               </HBox>
               <FlowPane fx:id="tags1" />
               <Label fx:id="email1" styleClass="cell_small_label" text="\$email" />
               <Label fx:id="temperature1" styleClass="cell_small_label" text="\$temperature" />
               <Label fx:id="nokName1" styleClass="cell_small_label" text="\$nokName" />
               <Label fx:id="nokRelationship1" styleClass="cell_small_label" text="\$nokRelationship" />
               <Label fx:id="nokContact1" prefHeight="17.0" prefWidth="80.0" styleClass="cell_small_label" text="\$nokContact" />
               <Label fx:id="remark1" prefHeight="9.0" prefWidth="44.0" styleClass="cell_small_label" text="\$remark" />
            </children>
         </VBox>
      </children>
   </GridPane>
</HBox>
